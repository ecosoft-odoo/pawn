<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_blacklist_sync_tree">
            <field name="name">view.pawn.blacklist.sync.tree</field>
            <field name="model">blacklist.sync</field>
            <field name="arch" type="xml">
                <tree string="Blacklist" version="7.0" colors="grey:state=='inactive';blue:state== 'draft';">
                    <field name="name" />
                    <field name="card_number" />
                    <field name="pawnshop" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_blacklist_sync_form" model="ir.ui.view">
            <field name="name">view.pawn.blacklist.sync.form</field>
            <field name="model">blacklist.sync</field>
            <field name="arch" type="xml">
                <form string="Pawn Ticket" version="7.0">
                    <header>
                        <button name="action_active" states="draft" string="Active" type="object" class="oe_highlight"/>
                        <button name="action_inactive" states="active" string="Inactive" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="active,inactive" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="ชื่อ"/>
                            </h1>   
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="card_number"/>
                                <field name="banned_date" widget="date" attrs="{'invisible':[('state', '=', 'draft')]}" />
                                <field name="unbanned_date" widget="date" attrs="{'invisible':[('state', '!=', 'inactive')]}" />
                                <field name="pawnshop" />
                                <field name="unbanned_pawnshop" attrs="{'invisible':[('state', '!=', 'inactive')]}" />
                            </group>   
                            <group>
                                <field name="suspicious_asset" />
                                <field name="price" />
                                <field name="suspicious_asset_image" 
                                    widget="image"
                                    class="oe_left oe_avatar"
                                 />
                                <field name="suspicious_asset_image_date" />
                            </group>   
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_blacklist_sync_filter" model="ir.ui.view">
            <field name="name">blacklist.sync.list.select</field>
            <field name="model">blacklist.sync</field>
            <field name="arch" type="xml">
                <search string="Search Blacklist">
                    <field name="partner_id" string="Customer"/>
                    <field name="card_number"/>
                    <field name="pawnshop"/>
                    <field name="unbanned_pawnshop"/>
					<separator/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]" />
                    <filter name="active" string="Blacklisted" domain="[('state','=','active')]" />
                    <filter name="inactive" string="Unblacklisted" domain="[('state','=','inactive')]" />
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Pawnshop" domain="[]" context="{'group_by':'pawnshop'}"/>
                        <filter string="Unbanned Pawnshop" domain="[]" context="{'group_by':'unbanned_pawnshop'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_blacklist_sync">
            <field name="name">Customer Blacklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">blacklist.sync</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_blacklist_sync_filter"/>
        </record>
        
        <!-- Menu -->
        <menuitem name="Customer Blacklist" id="menu_blacklist_sync" parent="pawnshop.menu_pawn_master"
            action="action_blacklist_sync" groups="pawnshop.group_pawn_accountant,pawnshop.group_pawn_manager,pawnshop.group_pawn_officer" sequence="63"/> 

	</data>
</openerp>