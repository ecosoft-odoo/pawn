<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_blacklist_config_tree">
            <field name="name">view.pawn.blacklist.sync.config.tree</field>
            <field name="model">blacklist.sync.config</field>
            <field name="arch" type="xml">
                <tree string="Blacklist Config" version="7.0">
                    <field name="name" />
                    <field name="db_name" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_blacklist_config_form">
            <field name="name">view.pawn.blacklist.sync.config.form</field>
            <field name="model">blacklist.sync.config</field>
            <field name="arch" type="xml">
                <form string="Pawn Rule" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" name='label_name' string="Name"/>
                            </div>
                            <h1>
                                <field name="name" select="1"/>
                            </h1>   
                        </div>
                        <group>
                            <group>
                                <field name="db_name" />
                                <field name="url" />
                            </group>   
                            <group>
                                <field name="username" />
                                <field name="password" password="True" widget="password"/>
                                <field name="active" />
                            </group>   
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_blacklist_config">
            <field name="name">Blacklist API Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">blacklist.sync.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|', ('active', '=', True), ('active', '=', False)]</field>
        </record>
        
        <!-- Menu -->
        <menuitem name="Blacklist API Settings" id="menu_blacklist_sync_config" parent="pawnshop.menu_pawnshop_config"
            action="action_blacklist_config" groups="pawnshop.group_pawn_admin" sequence="130"/> 

	</data>
</openerp>